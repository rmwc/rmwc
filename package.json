{
  "name": "rmwc",
  "author": "James Friedman",
  "version": "4.0.6",
  "private": true,
  "homepage": "https://jamesmfriedman.github.io/rmwc/",
  "description": "RMWC: A React wrapper for Material Design (Web) Components",
  "license": "MIT",
  "main": "index.js",
  "types": "index.d.ts",
  "peerDependencies": {
    "react": "^15.x.x || ^16.x.x",
    "react-dom": "^15.x.x || ^16.x.x"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "focus-trap": "^3.0.0",
    "hyperform": "^0.9.14",
    "mutation-observer": "^1.0.3",
    "prop-types": "^15.6.2"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build:docs": "npm run docgen && react-app-rewired build && rm -R docs && mv build docs",
    "build:code": "npm run clean && node scripts/build-code.js",
    "build:lib": "node scripts/build-lib.js",
    "build": "npm run build:code && npm run build:docs",
    "pretest": "node scripts/pretest.js",
    "test": "flow && npm run build:code && node scripts/test.js && npm run clean",
    "test:watch": "react-app-rewired test --env=jsdom",
    "test:coverage": "react-app-rewired test --env=jsdom --coverage",
    "release": "npm run clean && lerna version && lerna run publish:dist --parallel --no-bail && npm run clean",
    "release:force": "npm run clean && lerna version --force-publish && lerna run publish:dist --parallel --no-bail && npm run clean",
    "clean": "node scripts/clean.js",
    "postpublish": "npm run clean",
    "docgen": "node scripts/docgen.js",
    "deploy:docs": "npm run build:docs && git add docs -f && git commit -m 'Deploying docs' && git push --force && npm run clean",
    "changelog": "changelog",
    "storybook": "start-storybook -p 6006",
    "preversion": "npm test -- --coverage",
    "version": "npm run build && npm run changelog && git add CHANGELOG.md && git add docs -f",
    "postversion": "git push && git push --tags",
    "flow": "flow"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.11",
    "@storybook/addon-knobs": "^3.4.11",
    "@storybook/react": "^3.4.11",
    "@types/classnames": "^2.2.6",
    "@types/node": "^8.10.29",
    "@types/prop-types": "^15.5.5",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.7",
    "babel-cli": "^6.26.0",
    "babel-eslint": "8.2.3",
    "babel-preset-es2015": "^6.24.1",
    "css-to-string-loader": "^0.1.3",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-15": "^1.1.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "eslint": "^4.19.1",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.11.1",
    "flow-bin": "^0.86.0",
    "generate-changelog": "1.7.0",
    "lerna": "^3.2.1",
    "material-components-web": "^0.41.0",
    "normalize.css": "^7.0.0",
    "prettier-eslint": "^8.8.2",
    "prismjs": "^1.15.0",
    "react": "^16.5.0",
    "react-app-rewired": "^1.6.2",
    "react-docgen": "^2.21.0",
    "react-dom": "^16.5.0",
    "react-hot-loader": "^4.3.6",
    "react-loadable": "^5.5.0",
    "react-markdown-loader": "git+https://github.com/jamesmfriedman/react-markdown-loader.git#master",
    "react-router-dom": "^4.3.1",
    "react-scripts": "1.1.4",
    "safer-buffer": "^2.1.2",
    "storybook": "^1.0.0",
    "typescript": "^3.0.3"
  },
  "jest": {
    "moduleNameMapper": {
      "@rmwc/(.*)$": "<rootDir>/src/$1"
    },
    "resolver": "./scripts/jest-resolver.js",
    "collectCoverageFrom": [
      "src/**/*.{js}",
      "!<rootDir>/node_modules/",
      "!src/**/*.flow.js",
      "!src/**/*.story.js",
      "!src/index.js",
      "!src/setupTests.js",
      "!src/drawer/polyfill.js",
      "!src/rmwc/**/*",
      "!src/base/utils/document-component.js",
      "!src/base/utils/story-with-state.js",
      "!src/base/testPolyfill.js",
      "!src/icon/defs.js"
    ]
  }
}
