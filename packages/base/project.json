{
  "name": "base",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/base/src",
  "projectType": "library",
  "tags": ["publishable", "type:ui-component", "readme"],
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/base/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "dependsOn": [
        {
          "projects": "readme",
          "target": "generate-markdown"
        }
      ],
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/packages/base"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/base"
      }
    },
    "npm-deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "distFolderPath": "dist/packages/base"
      },
      "dependsOn": ["pre-npm-deploy-build-production"]
    },
    "pre-npm-deploy-build-production": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run base:build:production"
      }
    }
  }
}
